{
    "manifest_version": 3,
    "name": "Anime Art Forwarder",
    "version": "0.3.1",
    "version_name": "0.3.1 alpha",
    "description": "A simple and efficient Chrome browser extension that streamlines the process of sending anime art to your Telegram channel through a Telegram bot. Quickly forward anime art from various sources directly to your Telegram channel with just one click.",
    "homepage_url": "https://github.com/Octoober/anime-art-forwarder",
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Anime Art Forwarder",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "contextMenus",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://danbooru.donmai.us/posts/*",
                "*://rule34.xxx/index.php?page=post&s=view&id=**"
            ],
            "run_at": "document_idle",
            "js": [
                "contentScript.js"
            ]
        }
    ]
}
